{# ActiveFusions #}
{% extends 'default_frame.twig' %}

{% set menus = ['setting', 'admin_mailtemplateedit'] %}

{% block title %}メールテンプレート管理{% endblock %}
{% block sub_title %}メールテンプレート登録・編集{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}
    <div class="row" id="aside_wrap">
        <form name="form1" role="form" class="form-horizontal" id="form1" method="post" action="">
            {{ form_widget(form._token) }}

            <div class="col-md-9">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">メールテンプレート登録・編集</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        {{ form_row(form.name) }}
                        {{ form_row(form.subject) }}
                        {{ form_row(form.header) }}
                        {{ form_row(form.footer) }}

                    </div><!-- /.box-body -->
                </div><!-- /.box -->
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-center btn_area">
                        <p><a href="{{ url('admin_mailtemplateedit') }}">戻る</a></p>
                    </div>
                </div>
            </div>

            <div class="col-md-3" id="aside_column">
                <div class="col_inner">
                    <div class="box no-header">
                        <div class="box-body">
                            <div class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg" onclick="document.form1.submit();">登録</button>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div><!-- /.col -->

        </form>
    </div>
{% endblock %}
