<!-- ▼item_list▼ -->
<div id="disp_list">
    <div class="row">
        {% for DisplayProduct in DisplayProducts %}
            <div class="col-xs-6 col-sm-3 col-md-3 col-lg-2" style="padding-left: 5px; padding-right: 5px;">
                <div class="pickup_item">
                    <a href="{{ url('product_detail', {'id': DisplayProduct.Product.id}) }}">
                        <div class="item_photo"><img src="{{ app.config.image_save_urlpath }}/{{ DisplayProduct.Product.mainFileName|no_image_product }}"></div>
                        <div class="btn btn-success" style="width: 100%; height: 30px; padding: 3px 16px !important;">商品ページへ</div>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
